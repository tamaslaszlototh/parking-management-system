@page "/login"
@model Login
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2>@ViewData["Title"]</h2>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }
        
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="LoginUserRequest.Email"></label>
                <input asp-for="LoginUserRequest.Email" class="form-control" type="email" />
                <span asp-validation-for="LoginUserRequest.Email" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="LoginUserRequest.Password"></label>
                <input asp-for="LoginUserRequest.Password" class="form-control" />
                <span asp-validation-for="LoginUserRequest.Password" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}